		"svelte": "^4.2.8",
		"svelte-adapter-bun": "^0.5.1",
		"svelte-check": "^3.6.2",
		"tailwindcss": "^3.4.0",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.10",
		"vitest": "^1.1.0"
	},
	"type": "module",
	"prisma": {
		"seed": "bun prisma/seed.ts"
	},
	"dependencies": {}
